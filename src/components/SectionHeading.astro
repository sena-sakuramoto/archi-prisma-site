---
interface CTA {
  label: string;
  href: string;
  target?: string;
}

interface Props {
  kicker?: string;
  highlight: string;
  title: string;
  summary: string;
  cta: CTA;
  align?: 'left' | 'center';
}

const { kicker, highlight, title, summary, cta, align = 'left' } = Astro.props;
const alignmentClasses = align === 'center' ? 'items-center text-center' : 'items-start text-left';
---

<header class={`section-heading flex flex-col gap-4 ${alignmentClasses}`}>
  {kicker && (
    <p class="text-[11px] font-semibold uppercase tracking-[0.45em] text-primary-400/80">{kicker}</p>
  )}

  <div class={`w-full ${align === 'center' ? 'items-center text-center' : 'items-start text-left'} flex flex-col gap-6 md:flex-row md:items-end md:justify-between`}>
    <div class={`flex max-w-3xl flex-col gap-3 ${alignmentClasses}`}>
      <span class="text-sm font-semibold uppercase tracking-[0.3em] text-primary-500/90">{highlight}</span>
      <h2 class="text-3xl font-semibold leading-tight text-surface-900 sm:text-4xl lg:text-5xl">{title}</h2>
      <p class="max-w-2xl text-sm text-surface-600 sm:text-base">{summary}</p>
    </div>

    <a
      href={cta.href}
      target={cta.target}
      class="inline-flex h-12 items-center justify-center rounded-full border border-primary-400/60 px-6 text-xs font-semibold uppercase tracking-[0.3em] text-primary-600 transition hover:border-primary-300 hover:bg-primary-300 hover:text-surface-950 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-300"
    >
      {cta.label}
      <span class="ml-2">â†—</span>
    </a>
  </div>
</header>
