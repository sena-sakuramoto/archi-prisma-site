---
interface Props {
  tagline: string;
  subheading: string;
  registration: string;
}

const { tagline, subheading, registration } = Astro.props as Props;
const basePath = import.meta.env.BASE_URL.replace(/\/$/, '');
const toPublicPath = (path: string) => `${basePath}${path}`;
---

<section id="hero" class="relative overflow-hidden border-b border-surface-200">
  <img
    src={toPublicPath('/assets/hero-bg.jpg')}
    alt=""
    class="absolute inset-0 h-full w-full object-cover"
    data-parallax
    data-parallax-speed="0.18"
    loading="eager"
    fetchpriority="high"
  />
  <div class="absolute inset-0 bg-[linear-gradient(120deg,rgba(27,25,22,0.74),rgba(27,25,22,0.45)_45%,rgba(27,25,22,0.25))]"></div>

  <div class="site-container section-space relative flex min-h-[72svh] flex-col justify-center text-white">
    <p class="text-sm font-medium uppercase tracking-[0.18em] text-accent-300">Archi-Prisma Design works</p>
    <h1 class="mt-5 max-w-4xl text-5xl font-semibold leading-[1.05] sm:text-6xl lg:text-7xl">{tagline}</h1>
    <p class="mt-6 max-w-2xl text-base leading-relaxed text-white/90 sm:text-lg">{subheading}</p>

    <div class="mt-10 flex flex-wrap items-center gap-4">
      <a
        href="#contact"
        class="inline-flex items-center justify-center rounded-full bg-white px-7 py-3 text-sm font-semibold text-surface-900 hover:bg-surface-100"
      >
        お問い合わせ
      </a>
      <a
        href="#works"
        class="inline-flex items-center justify-center rounded-full border border-white/45 px-7 py-3 text-sm font-medium text-white hover:border-accent-300 hover:text-accent-300"
      >
        実績を見る
      </a>
    </div>

    <p class="mt-12 max-w-xl border-l-2 border-accent-300 pl-4 text-sm leading-relaxed text-white/85">
      {registration}
    </p>
  </div>
</section>
