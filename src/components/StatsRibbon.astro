---
interface StatItem {
  label: string;
  value: string;
  sublabel?: string;
}

interface Props {
  items: StatItem[];
}

const { items } = Astro.props;
---

<section class="relative overflow-hidden rounded-full border border-white/10 bg-white/5 px-4 py-3 text-surface-50">
  <div class="flex flex-wrap items-center justify-center gap-6 text-xs uppercase tracking-[0.25em] sm:text-sm">
    {items.map((item) => (
      <div class="flex items-center gap-3">
        <span class="text-primary-200">{item.value}</span>
        <span class="text-surface-300">{item.label}</span>
        {item.sublabel && <span class="text-surface-500">{item.sublabel}</span>}
      </div>
    ))}
  </div>
</section>
